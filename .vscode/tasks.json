{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build MainApp",
            "command": "make",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Clean MainApp",
            "command": "make",
            "args": [
                "clean_session"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ],
    "version": "2.0.0"
}